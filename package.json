{
  "name": "@sthzg/react-ssr-playground",
  "description": "Explore the renderToPipeableStream API in React 18+",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "conc \"npm:build:client -- -w\" \"npm:build:server -- -w\" \"NODE_ENV=production ./node_modules/.bin/nodemon server\"",
    "dev:hmr": "node server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client --manifest --ssrManifest",
    "build:server": "vite build --ssr src/entry-server.jsx --outDir dist/server",
    "serve": "NODE_ENV=production node --trace-warnings server",
    "debug": "node --inspect-brk server",
    "lint": "eslint --ext .jsx --ext .js ."
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.3",
    "compression": "^1.7.4",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "express": "^4.18.2",
    "nodemon": "^3.0.1",
    "prettier": "3.0.0",
    "serve-static": "^1.15.0",
    "vite": "^4.3.9",
    "vitest": "^0.32.3"
  },
  "nodemonConfig": {
    "watch": [
      "dist/server/"
    ]
  }
}
